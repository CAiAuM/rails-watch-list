<div class="bg-list">
  <div class="container text-below-banner py-4">
    <div class="row">
      <h2 class="mt-3 text-white">My Lists</h2>
        <% @lists.each do |list| %>
          <div class="col-4">
            <div class="card mt-3 bg-light shadow d-flex align-items-center">
              <div class="card-body">
                <%= link_to list.name, list_path(list), class: "text-decoration-none" %>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
